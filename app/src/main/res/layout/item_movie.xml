<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/itemCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_xs"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/button_corner_radius"
    card_view:cardElevation="@dimen/elevation_card"
    card_view:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/margin_small">

        <!-- Poster Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/movie_poster_width"
            android:layout_height="@dimen/movie_poster_height"
            android:layout_marginEnd="@dimen/margin_small"
            card_view:cardCornerRadius="@dimen/button_corner_radius_small"
            card_view:cardElevation="@dimen/elevation_poster">

            <ImageView
                android:id="@+id/posterImageView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/movie_poster"
                android:background="@color/background_light"
                tools:src="" />

        </androidx.cardview.widget.CardView>

        <!-- Movie Info -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_movie_title"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:fontFamily="serif"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="@dimen/margin_xs"
                android:lineSpacingMultiplier="1.2"
                tools:text="" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/margin_xs">

                <TextView
                    android:id="@+id/yearTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_xs"
                    android:background="@drawable/bg_year_tag"
                    android:paddingStart="@dimen/margin_xs"
                    android:paddingTop="@dimen/margin_xxs"
                    android:paddingEnd="@dimen/margin_xs"
                    android:paddingBottom="@dimen/margin_xxs"
                    android:text=""
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_tag"
                    android:textStyle="bold"
                    android:fontFamily="serif"
                    tools:text="" />

                <TextView
                    android:id="@+id/genreTextView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text=""
                    android:textSize="@dimen/text_size_movie_detail"
                    android:textColor="@color/primary_blue"
                    android:textStyle="italic"
                    android:fontFamily="serif"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="" />

            </LinearLayout>

            <TextView
                android:id="@+id/imdbIdTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="@dimen/text_size_imdb_id"
                android:textColor="@color/text_secondary"
                android:fontFamily="monospace"
                android:layout_marginTop="@dimen/margin_xxs"
                tools:text="" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
