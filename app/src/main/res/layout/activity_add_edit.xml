<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    android:padding="20dp">

    <!-- Page Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_movie"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="30dp" />

    <!-- Movie Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_movie_title"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_enter_movie_title"
        android:background="@color/white"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Release Year -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_release_year"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_year"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_enter_release_year"
        android:inputType="number"
        android:background="@color/white"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- Poster URL -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_poster_url"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_poster"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_enter_poster_url"
        android:background="@color/white"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginBottom="20dp" />

    <!-- IMDB ID -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_imdb_id"
        android:textSize="16sp"
        android:textColor="@color/text_primary"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/et_imdb_id"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:hint="@string/hint_enter_imdb_id"
        android:background="@color/white"
        android:textColor="@android:color/black"
        android:padding="12dp"
        android:layout_marginBottom="40dp" />

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/btn_cancel"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginEnd="10dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:text="@string/btn_save"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_marginStart="10dp" />

    </LinearLayout>

</LinearLayout>